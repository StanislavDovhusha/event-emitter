{
  "name": "eonemitter",
  "version": "1.0.1",
  "description": "Minimal and type-safe event emitter with optional behavior support.",
  "main": "./dist/index.js",       
  "module": "./dist/index.mjs",      
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./mini": {
      "require": "./dist/mini/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "dev:test": "vitest --watch",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "event-emitter",
    "signal",
    "observable",
    "typescript",
    "reactive"
  ],
  "author": "stanislav.dovhusha",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "1.13.1",
    "tsup": "8.5.0",
    "typescript": "5.1.6",
    "vitest": "3.2.4"
  }
}
